<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Members</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <nav class="navigation">
      <ul class="navigation__list">
        <li class="navigation__item">
          <a href="/board" class="navigation__link">Board</a>
        </li>
        <li class="navigation__item">
          <a href="/cycles" class="navigation__link">Cycles</a>
        </li>
        <li class="navigation__item">
          <a href="/members" class="navigation__link">Members</a>
        </li>

        <li class="navigation__item navigation__item--right">
          <a class="navigation__logout-btn" href="/logout">Logout</a>
        </li>
      </ul>
    </nav>

    <main>
      <h1 class="heading">Team Members</h1>
      <a class="button" href="/members/new">Add Member</a>

      <% if (people?.length > 0) { %>
      <ul class="list">
        <% people.forEach(p => { %>
        <li class="list__item member-item">
          <div class="member-item__info">
            <strong><%= p.displayName %></strong> â€” <%= p.position %>
          </div>

          <div class="member-item__actions button-group">
            <form method="GET" action="/members/<%= p._id %>/edit">
              <button type="submit" class="button button--small">Edit</button>
            </form>
            <form method="POST" action="/members/<%= p._id %>/delete">
              <button type="submit" class="button button--danger button--small">
                Delete
              </button>
            </form>
          </div>
        </li>
        <% }) %>
      </ul>
      <% } else { %>
      <p>No members available.</p>
      <% } %>
    </main>
  </body>
</html>
